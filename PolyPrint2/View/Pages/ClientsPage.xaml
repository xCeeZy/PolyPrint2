<!--#region Страница клиентов-->
<Page x:Class="PolyPrint2.View.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Клиенты">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="Управление клиентами"
                   Style="{StaticResource HeaderText}"/>
        <!--#endregion-->

        <!--#region Панель управления-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                     Grid.Column="0"
                     Style="{StaticResource InputTextBox}"/>

            <Button x:Name="AddButton"
                    Grid.Column="2"
                    Content="Добавить"
                    Style="{StaticResource SuccessButton}"
                    Width="120"/>

            <Button x:Name="EditButton"
                    Grid.Column="4"
                    Content="Редактировать"
                    Style="{StaticResource PrimaryButton}"
                    Width="140"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="6"
                    Content="Удалить"
                    Style="{StaticResource DangerButton}"
                    Width="120"/>
        </Grid>
        <!--#endregion-->

        <!--#region Таблица клиентов-->
        <DataGrid x:Name="ClientsGrid"
                  Grid.Row="4"
                  Style="{StaticResource MainDataGrid}"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                  CellStyle="{StaticResource DataGridCell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_Client}" Width="60"/>
                <DataGridTextColumn Header="Организация" Binding="{Binding Organization_Name}" Width="*"/>
                <DataGridTextColumn Header="Контактное лицо" Binding="{Binding Contact_Name}" Width="200"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--#endregion-->
    </Grid>
</Page>
<!--#endregion-->
