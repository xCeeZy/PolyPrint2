<!--#region Страница пользователей-->
<Page x:Class="PolyPrint2.View.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Пользователи">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="Управление пользователями"
                   Style="{StaticResource HeaderText}"/>
        <!--#endregion-->

        <!--#region Панель управления-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                     Grid.Column="0"
                     Style="{StaticResource InputTextBox}"/>

            <Button x:Name="AddButton"
                    Grid.Column="2"
                    Content="Добавить"
                    Style="{StaticResource SuccessButton}"
                    Width="120"/>

            <Button x:Name="EditButton"
                    Grid.Column="4"
                    Content="Редактировать"
                    Style="{StaticResource PrimaryButton}"
                    Width="140"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="6"
                    Content="Удалить"
                    Style="{StaticResource DangerButton}"
                    Width="120"/>
        </Grid>
        <!--#endregion-->

        <!--#region Таблица пользователей-->
        <DataGrid x:Name="UsersGrid"
                  Grid.Row="4"
                  Style="{StaticResource MainDataGrid}"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                  CellStyle="{StaticResource DataGridCell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_User}" Width="60"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--#endregion-->
    </Grid>
</Page>
<!--#endregion-->
