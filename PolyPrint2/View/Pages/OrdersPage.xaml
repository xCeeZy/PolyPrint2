<!--#region Страница заказов-->
<Page x:Class="PolyPrint2.View.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="Управление заказами"
                   Style="{StaticResource HeaderText}"/>
        <!--#endregion-->

        <!--#region Таблица заказов-->
        <DataGrid x:Name="OrdersGrid"
                  Grid.Row="2"
                  Style="{StaticResource MainDataGrid}"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                  CellStyle="{StaticResource DataGridCell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_Order}" Width="60"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" Width="*"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding Order_Date, StringFormat=dd.MM.yyyy}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Total, StringFormat={}{0:N2} руб.}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--#endregion-->
    </Grid>
</Page>
<!--#endregion-->
