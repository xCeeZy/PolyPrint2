<!--#region Окно авторизации-->
<Window x:Class="PolyPrint2.View.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PolyPrint - Авторизация"
        WindowStartupLocation="CenterScreen"
        Width="450"
        Height="350"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBrush}">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="АИС PolyPrint"
                   Style="{StaticResource HeaderText}"
                   HorizontalAlignment="Center"/>
        <!--#endregion-->

        <!--#region Описание-->
        <TextBlock Grid.Row="2"
                   Text="Учёт оборудования и сервисных заявок"
                   Style="{StaticResource LabelText}"
                   HorizontalAlignment="Center"/>
        <!--#endregion-->

        <!--#region Поле логина-->
        <TextBlock Grid.Row="4"
                   Text="Логин"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="LoginBox"
                 Grid.Row="6"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Поле пароля-->
        <TextBlock Grid.Row="8"
                   Text="Пароль"
                   Style="{StaticResource LabelText}"/>
        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="10"
                     Style="{StaticResource InputPasswordBox}"/>
        <!--#endregion-->

        <!--#region Кнопка входа-->
        <Button x:Name="LoginButton"
                Grid.Row="12"
                Content="Войти"
                Style="{StaticResource PrimaryButton}"
                Height="40"/>
        <!--#endregion-->
    </Grid>
</Window>
<!--#endregion-->
