<!--#region Окно редактирования сервисной заявки-->
<Window x:Class="PolyPrint2.View.Windows.EditServiceRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервисная заявка"
        WindowStartupLocation="CenterScreen"
        Width="650"
        Height="623"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30" Height="557">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Создание сервисной заявки"
                   Style="{StaticResource SubHeaderText}"/>
        <!--#endregion-->

        <!--#region Клиент-->
        <TextBlock Grid.Row="2"
                   Text="Клиент"
                   Style="{StaticResource LabelText}"/>
        <ComboBox x:Name="ClientBox"
                  Grid.Row="4"
                  Style="{StaticResource InputComboBox}"
                  DisplayMemberPath="Organization_Name"
                  SelectedValuePath="ID_Client"/>
        <!--#endregion-->

        <!--#region Оборудование-->
        <TextBlock Grid.Row="6"
                   Text="Оборудование"
                   Style="{StaticResource LabelText}"/>
        <ComboBox x:Name="EquipmentBox"
                  Grid.Row="8"
                  Style="{StaticResource InputComboBox}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="ID_Equipment"/>
        <!--#endregion-->

        <!--#region Описание проблемы-->
        <TextBlock Grid.Row="10"
                   Text="Описание проблемы"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="ProblemBox"
                 Grid.Row="12"
                 Height="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 VerticalContentAlignment="Top"
                 Padding="8"/>
        <!--#endregion-->

        <!--#region Статус-->
        <TextBlock Grid.Row="14"
                   Text="Статус"
                   Style="{StaticResource LabelText}"/>
        <ComboBox x:Name="StatusBox"
                  Grid.Row="16"
                  Style="{StaticResource InputComboBox}"/>
        <!--#endregion-->

        <!--#region Мастер-->
        <TextBlock Grid.Row="18"
                   Text="Назначить мастера"
                   Style="{StaticResource LabelText}"/>
        <ComboBox x:Name="MasterBox"
                  Grid.Row="20"
                  Style="{StaticResource InputComboBox}"
                  DisplayMemberPath="Login"
                  SelectedValuePath="ID_User"/>
        <!--#endregion-->

        <!--#region Кнопки-->
        <Grid Grid.Row="22">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Grid.Column="0"
                    Content="Сохранить"
                    Style="{StaticResource SuccessButton}"
                    Height="40"/>

            <Button x:Name="CancelButton"
                    Grid.Column="2"
                    Content="Отмена"
                    Style="{StaticResource SecondaryButton}"
                    Height="40"/>
        </Grid>
        <!--#endregion-->
        </Grid>
    </ScrollViewer>
</Window>
<!--#endregion-->
