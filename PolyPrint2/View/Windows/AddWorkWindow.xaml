<!--#region Окно добавления работы-->
<Window x:Class="PolyPrint2.View.Windows.AddWorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить работу"
        WindowStartupLocation="CenterScreen"
        Width="550"
        Height="409"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBrush}">

    <Grid Margin="30,30,30,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock Grid.Row="0"
                   Text="Добавление выполненной работы"
                   Style="{StaticResource SubHeaderText}"/>
        <!--#endregion-->

        <!--#region Описание работы-->
        <TextBlock Grid.Row="2"
                   Text="Описание выполненной работы"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="DescriptionBox"
                 Grid.Row="4"
                 Height="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 VerticalContentAlignment="Top"
                 Padding="8"/>
        <!--#endregion-->

        <!--#region Стоимость-->
        <TextBlock Grid.Row="6"
                   Text="Стоимость работы (руб.)"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="CostBox"
                 Grid.Row="8"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Кнопки-->
        <Grid Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Grid.Column="0"
                    Content="Сохранить"
                    Style="{StaticResource SuccessButton}"
                    Height="40"/>

            <Button x:Name="CancelButton"
                    Grid.Column="2"
                    Content="Отмена"
                    Style="{StaticResource SecondaryButton}"
                    Height="40"/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
<!--#endregion-->
