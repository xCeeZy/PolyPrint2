<!--#region Окно редактирования клиента-->
<Window x:Class="PolyPrint2.View.Windows.EditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Клиент"
        WindowStartupLocation="CenterScreen"
        Width="550"
        Height="498"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBrush}">

    <Grid Margin="30,30,30,9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Добавление клиента"
                   Style="{StaticResource SubHeaderText}"/>
        <!--#endregion-->

        <!--#region Организация-->
        <TextBlock Grid.Row="2"
                   Text="Название организации"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="OrganizationBox"
                 Grid.Row="4"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Контактное лицо-->
        <TextBlock Grid.Row="6"
                   Text="Контактное лицо"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="ContactNameBox"
                 Grid.Row="8"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Телефон-->
        <TextBlock Grid.Row="10"
                   Text="Телефон"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="PhoneBox"
                 Grid.Row="12"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Email-->
        <TextBlock Grid.Row="14"
                   Text="Email"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="EmailBox"
                 Grid.Row="16"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Кнопки-->
        <Grid Grid.Row="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Grid.Column="0"
                    Content="Сохранить"
                    Style="{StaticResource SuccessButton}"
                    Height="40"/>

            <Button x:Name="CancelButton"
                    Grid.Column="2"
                    Content="Отмена"
                    Style="{StaticResource SecondaryButton}"
                    Height="40"/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
<!--#endregion-->
