<!--#region Окно редактирования оборудования-->
<Window x:Class="PolyPrint2.View.Windows.EditEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оборудование"
        WindowStartupLocation="CenterScreen"
        Width="600"
        Height="580"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30" Height="519">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!--#region Заголовок-->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Добавление оборудования"
                   Style="{StaticResource SubHeaderText}"/>
        <!--#endregion-->

        <!--#region Название-->
        <TextBlock Grid.Row="2"
                   Text="Название"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="NameBox"
                 Grid.Row="4"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Модель-->
        <TextBlock Grid.Row="6"
                   Text="Модель"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="ModelBox"
                 Grid.Row="8"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Серийный номер-->
        <TextBlock Grid.Row="10"
                   Text="Серийный номер"
                   Style="{StaticResource LabelText}"/>
        <TextBox x:Name="SerialNumberBox"
                 Grid.Row="12"
                 Style="{StaticResource InputTextBox}"/>
        <!--#endregion-->

        <!--#region Клиент-->
        <TextBlock Grid.Row="14"
                   Text="Клиент"
                   Style="{StaticResource LabelText}"/>
        <ComboBox x:Name="ClientBox"
                  Grid.Row="16"
                  Style="{StaticResource InputComboBox}"
                  DisplayMemberPath="Organization_Name"
                  SelectedValuePath="ID_Client"/>
        <!--#endregion-->

        <!--#region Состояние-->
        <TextBlock Grid.Row="18"
                   Text="Состояние"
                   Style="{StaticResource LabelText}"/>
        <ComboBox x:Name="ConditionBox"
                  Grid.Row="20"
                  Style="{StaticResource InputComboBox}"/>
        <!--#endregion-->

        <!--#region Кнопки-->
        <Grid Grid.Row="22">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SaveButton"
                    Grid.Column="0"
                    Content="Сохранить"
                    Style="{StaticResource SuccessButton}"
                    Height="40"/>

            <Button x:Name="CancelButton"
                    Grid.Column="2"
                    Content="Отмена"
                    Style="{StaticResource SecondaryButton}"
                    Height="40"/>
        </Grid>
        <!--#endregion-->
        </Grid>
    </ScrollViewer>
</Window>
<!--#endregion-->
