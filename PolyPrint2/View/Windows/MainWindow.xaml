<!--#region Главное окно-->
<Window x:Class="PolyPrint2.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PolyPrint - Главное окно"
        WindowStartupLocation="CenterScreen"
        Width="1200"
        Height="700"
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--#region Панель навигации-->
        <Grid Grid.Column="0"
              Background="{StaticResource PrimaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--#region Заголовок-->
            <Grid Grid.Row="0"
                  Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="PolyPrint"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock x:Name="UserRoleText"
                           Grid.Row="2"
                           FontSize="14"
                           Foreground="#BDC3C7"/>
            </Grid>
            <!--#endregion-->

            <!--#region Меню навигации-->
            <StackPanel Grid.Row="1"
                        Margin="0,20,0,0">

                <Button x:Name="ClientsButton"
                        Content="Клиенты"
                        Style="{StaticResource SecondaryButton}"
                        Margin="15,0,15,12"/>

                <Button x:Name="EquipmentButton"
                        Content="Оборудование"
                        Style="{StaticResource SecondaryButton}"
                        Margin="15,0,15,12"/>

                <Button x:Name="OrdersButton"
                        Content="Заказы"
                        Style="{StaticResource SecondaryButton}"
                        Margin="15,0,15,12"/>

                <Button x:Name="ServiceRequestsButton"
                        Content="Сервисные заявки"
                        Style="{StaticResource SecondaryButton}"
                        Margin="15,0,15,12"/>

                <Button x:Name="UsersButton"
                        Content="Пользователи"
                        Style="{StaticResource SecondaryButton}"
                        Margin="15,0,15,12"/>
            </StackPanel>
            <!--#endregion-->

            <!--#region Кнопка выхода-->
            <Button x:Name="LogoutButton"
                    Grid.Row="2"
                    Content="Выйти"
                    Style="{StaticResource DangerButton}"
                    Margin="15,15,15,20"/>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->

        <!--#region Область контента-->
        <Frame x:Name="MainFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource WindowBrush}"
               Margin="20"/>
        <!--#endregion-->
    </Grid>
</Window>
<!--#endregion-->
